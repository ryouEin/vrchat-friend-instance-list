{
  "manifest_version": 2,
  "name": "VRChat Friend Instance List",
  "description": "Tool for VRChat. Show instances exist your friends.",
  "version": "4.0.0",
  "permissions": [
    "tabs",
    "https://vrchat.com/",
    "https://www.vrchat.com/"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon_small.png",
      "38": "icon_big.png"
    }
  },
  "background": {
    "scripts": [ "icon_clicked.js" ],
    "persistent": false
  },
  "applications": {
    "gecko": {
      "id": "{aa88fe5f-72c8-46ee-8089-678af6c93b1f}",
      "update_url": "https://raw.githubusercontent.com/ryouEin/vrchat-friend-instance-list/master/updates.json",
      "strict_min_version": "61.0"
    }
  }
}
